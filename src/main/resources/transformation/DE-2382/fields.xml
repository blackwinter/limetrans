        <combine name="" value="${transl}" sameEntity="true">
          <if>
            <all flushWith="880??.a" sameEntity="true">
              <data source="880??.6">
                <regexp  match="^246" />
              </data>
            </all>
          </if>
          <data source="880??.a" name="transl" />
        </combine>
      </concat>
    </entity>
  </entity>

