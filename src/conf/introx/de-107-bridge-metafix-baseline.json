{
  "isil": "DE-107",
  "path": "/data/pubhub/export/alma/prod/",
  "external-maps": "/data/jenkins/limetrans/maps",
  "postprocess": true,
  "alma": {
    "filter": [
      "962??.e=dilibri",
      "85640.u=~www\\.edoweb-rlp\\.de"
    ],
    "sisis-supplements": {
      "0010": "/mnt/herakles/${isil}/upload/unload_ZSBaende.TIT",
      "0600": "/mnt/herakles/${isil}/upload/unload_Bemerkungen.TIT",
      "2662": "/mnt/herakles/${isil}/upload/unload_Links.TIT"
    }
  },
  "input": {
    "queue": {
      "path": "${path}",
      "pattern": "baseline.xml.bgzf"
    }
  },
  "output": {
    "elasticsearch": {
      "index": {
        "type": "titel",
        "name": "${isil}-bridge-introx-metafix-",
        "timewindow": "yyyyMMdd",
        "settings": "classpath:/elasticsearch/hbztitle-settings-%s.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping-%s.json",
        "idKey": "RecordIdentifier.identifierForTheIndex"
      }
    }
  }
}
