{
  "isil": "DE-Bi10",
  "path": "/mnt/datenportal/export/alma/prod/",
  "postprocess": true,
  "alma": {
    "regexp": {
      "suppressedLocation": "(?:BiblVerw|CB_ZSReg|CM_Schran|CM_ZSReg|Dauerausl|ILL|ILL_CB|ILL_CM|LAM_ZSReg)"
    }
  },
  "input": {
    "queue": {
      "path": "${path}",
      "pattern": "baseline.xml.bgzf"
    }
  },
  "output": {
    "elasticsearch": {
      "index": {
        "type": "titel",
        "name": "${isil}-introx-metafix-",
        "timewindow": "yyyyMMdd",
        "settings": "classpath:/elasticsearch/hbztitle-settings.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping.json",
        "idKey": "RecordIdentifier.identifierForTheIndex"
      }
    }
  }
}
