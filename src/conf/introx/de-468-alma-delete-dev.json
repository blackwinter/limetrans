{
  "isil": "DE-468",
  "input": {
    "queue": {
      "path": "/mnt/almaprod/central/",
      "pattern": "NZ_Central_Pub_PE_Bib_GND_All_*_delete*.tar.gz",
      "processor": "ALMAXML"
    }
  },
  "output": {
    "elasticsearch": {
      "cluster": "zbn",
      "host": ["zephyros.hbz-nrw.de:9300"],
      "index": {
        "type": "titel",
        "name": "${isil}-alma-introx-limetrans-",
        "settings": "classpath:/elasticsearch/hbztitle-settings.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping.json",
        "idKey": "RecordIdentifier.identifierForTheIndex"
      },
      "update": true,
      "bulkAction": "delete"
    }
  },
  "transformation-rules": "classpath:/transformation/alma-deletions.xml"
}
