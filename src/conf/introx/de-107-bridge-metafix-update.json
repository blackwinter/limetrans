{
  "isil": "DE-107",
  "path": "/data/pubhub/export/alma/prod/",
  "postprocess": true,
  "alma": {
    "filter": [
      "962??.e=dilibri",
      "85640.u=~www\\.edoweb-rlp\\.de"
    ],
    "sisis-supplements": {
      "0010": "/mnt/herakles/${isil}/upload/unload_ZSBaende.TIT",
      "0600": "/mnt/herakles/${isil}/upload/unload_Bemerkungen.TIT"
    }
  },
  "input": {
    "queue": {
      "path": "${path}",
      "pattern": "update.xml.bgzf"
    }
  },
  "output": {
    "elasticsearch": {
      "index": {
        "type": "titel",
        "name": "${isil}-bridge-introx-metafix-",
        "settings": "classpath:/elasticsearch/hbztitle-settings.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping.json",
        "idKey": "RecordIdentifier.identifierForTheIndex"
      },
      "deletionLiteral": "DEL",
      "update": true
    }
  }
}
