{
  "sigel": "107",
  "isil": "DE-${sigel}",
  "path": "/mnt/herakles/${isil}/upload/",
  "input": {
    "queue1": {
      "path": "${path}",
      "pattern": "{hanser_ebooks_LBZ,NBE_*_gesamt,utb_report,WBG *,zdb41utb-tit}.mrc",
      "processor" : "MARC21RECORDS"
    },
    "queue2": {
      "path": "${path}",
      "pattern": "{Meiner_export_*,Narr_Francke_Attempto_elibrary-marcxml,SpringerNature_Books_MARCXML_*}.xml"
    }
  },
  "output": {
    "elasticsearch": {
      "index": {
        "type": "hbz",
        "name": "${isil}-bridge-introx-supplement-",
        "timewindow": "yyyyMMdd",
        "settings": "classpath:/elasticsearch/hbztitle-settings.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping.json",
        "idKey": "RecordIdentifier.identifierForTheRecord"
      }
    }
  },
  "transformation-rules": "classpath:/transformation/${isil}-ebooks.xml"
}
