{
  "isil": "DE-468",
  "alma": "49HBZ_WUP",
  "id-suffix": "-ALMA",
  "input": {
    "queue": {
      "path": "/mnt/almaprod/central/",
      "pattern": "NZ_Central_Pub_PE_Bib_GND_All_202102*_new*.tar.gz",
      "processor": "ALMAXML"
    }
  },
  "output": {
    "elasticsearch": {
      "cluster": "zbn",
      "host": ["zephyros.hbz-nrw.de:9300"],
      "index": {
        "type": "titel",
        "name": "${isil}-alma-introx-limetrans-",
        "settings": "classpath:/elasticsearch/hbztitle-settings.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping.json",
        "idKey": "RecordIdentifier.identifierForTheRecord"
      },
      "update": true
    }
  }
}
