{
  "isil": "DE-51",
  "path": "/data/pubhub/export/alma/prod/",
  "postprocess": true,
  "alma": {
    "regexp": {
      "suppressedLocation": "RES_SHARE"
    }
  },
  "input": {
    "queue": {
      "path": "${path}",
      "pattern": "update.xml.bgzf"
    }
  },
  "output": {
    "elasticsearch": {
      "index": {
        "type": "titel",
        "name": "${isil}-bridge-introx-metafix-",
        "settings": "classpath:/elasticsearch/hbztitle-settings.json",
        "mapping": "classpath:/elasticsearch/hbztitle-mapping.json",
        "idKey": "RecordIdentifier.identifierForTheIndex"
      },
      "deletionLiteral": "DEL",
      "update": true
    }
  }
}
